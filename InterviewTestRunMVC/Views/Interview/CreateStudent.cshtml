@model InterviewTestRunMVC.Models.Student

<html>
    <head>
        <h1>Create Student</h1>
    </head>
    <body>
        <form asp-action="CreateStudent" asp-controller="Interview" method="post">
            <label asp-for="StudentName"></label>
            <input asp-for="StudentName" class="form-control"/>
            <br />
            <label asp-for="Department"></label>
            <input asp-for="Department" class="form-control" />
            <br />
            <label asp-for="CollegeName"></label>
            <input asp-for="CollegeName" class="form-control" />
            <br />
            <label asp-for="StudentType"></label>
            <select asp-for="StudentType">
                <option value="0">Engineering</option>
                <option value="1">Medical</option>
            </select>
            <br/>
            <input type="submit" class="btn btn-success" value="Create Student"/>
        </form>
    </body>
</html>