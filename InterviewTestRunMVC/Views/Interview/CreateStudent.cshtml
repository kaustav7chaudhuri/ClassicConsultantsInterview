@model InterviewTestRunMVC.Models.Student
<script src="f:\testing\interviewtestrun\interviewtestrunmvc\javascript\jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<html>
    <head>
        <h1>Create Student</h1>

        <script type="text/javascript">
            $(document).ready(function(){
                $("#btnReset").on("click", function(){
                    $("#txtStudntName, #txtStudntDept, #idStudntClg").val("");
                    $("#ddlStudntType").val("0");
                });
            });
        </script>
    </head>
    <body>
        <form asp-action="CreateStudent" asp-controller="Interview" method="post">
            <label asp-for="StudentName"></label>
            <input asp-for="StudentName" class="form-control" id="txtStudntName"/>
            <br />
            <label asp-for="Department"></label>
            <input asp-for="Department" class="form-control" id="txtStudntDept"/>
            <br />
            <label asp-for="CollegeName"></label>
            <input asp-for="CollegeName" class="form-control" id="idStudntClg"/>
            <br />
            <label asp-for="StudentType"></label>
            <select asp-for="StudentType" id="ddlStudntType">
                <option value="0">Engineering</option>
                <option value="1">Medical</option>
            </select>
            <br/>
            <input type="submit" class="btn btn-success" value="Create Student"/>
        <input id="btnReset" type="button" class="btn btn-secondary" value="Reset" />
        </form>
    </body>
</html>