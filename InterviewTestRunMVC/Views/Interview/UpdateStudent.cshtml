@model InterviewTestRunMVC.Models.Student

<html>
    <head>
        <h1>Update Student</h1>
    </head>
<body>
    <form asp-action="UpdateStudent" asp-controller="Interview" method="post">

        <input asp-for="StudentID" class="form-control" hidden/>
        <br />
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
        <br />
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" />
        <br />
        <label asp-for="CollegeName"></label>
        <input asp-for="CollegeName" class="form-control" />

        <input asp-for="RollNumber" class="form-control" hidden/>
        <br />
        <input type="submit" class="btn btn-success" value="Update Student" />
    </form>
</body>
</html>